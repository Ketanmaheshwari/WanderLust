<% layout("layouts/boilerplate") %> 
<!-- Extend the base layout named 'boilerplate' -->

<div class="row mt-3">
    <div class="col-8 offset-3">
        <!-- Heading for listing details -->
        <h1><%= listing.title %></h1>
    </div>

    <!-- ===================== -->
    <!-- Card to display listing details -->
    <!-- ===================== -->
    <div class="card listing-card col-6 offset-3 show-card">
        <!-- Display listing image from 'listing.image.url' -->
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing image">

        <div class="card-body">
            <!-- Display listing title, description, price, location, and country -->
            <p class="card-text"> Owned by: <i><%=listing.owner.username%></i><br> </p>
              
                <p class="card-text"> <%= listing.description %> <!-- Description --></p>
              <p class="card-text">  â‚¹ <%= listing.price.toLocaleString('en-IN') %> <br></p> <!-- Price formatted for Indian locale -->
              <p class="card-text">   <%= listing.location %>    <!-- Location --></p>
               <p class="card-text">  <%= listing.country %>          <!-- Country --></p>
            </p>
        </div>
    </div>

    <br>

    <!-- ===================== -->
    <!-- Edit and Delete Buttons -->
    <!-- ===================== -->
    
    <div class="col-1 offset-3">
        <!-- Edit button: links to edit page for this listing -->
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark btns">Edit</a>

        <!-- Delete button: sends POST request with _method=DELETE using method-override -->
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="margin-top: 10px;">
            <button class="btn btn-dark btns">Delete</button>
        </form>
    </div>

    <div class="col-8 offset-3">
        <hr>
        <h4>Leave a Review</h4>
        <!-- Form to submit a new review -->
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" id="rating" min="1" max="5" name="review[rating]" class="form-range" />
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea id="comment" name="review[comment]" rows="4" cols="50" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <div>
            <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>

      <hr/>
      <p><b>Reviews</b></p>
      

<div class="row">
            <%for(review of listing.reviews){%>
        <div class="card col-5 mb-3 ms-3">
            <div class="card-body">

                <h5 class="card-title">Jane</h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text">Rating: <%= review.rating %></p>
            </div>
            <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="mb-3" method="POST" >
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
        </div>
      <%}%>
</div>
    </div>
</div>
