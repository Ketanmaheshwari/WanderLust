<% layout("layouts/boilerplate") %> 
<!-- Extend the base layout named 'boilerplate' -->

<div class="row mt-3">
    <div class="col-8 offset-3">
        <!-- Heading for listing details -->
        <h1><%= listing.title %></h1>
    </div>

    <!-- ===================== -->
    <!-- Card to display listing details -->
    <!-- ===================== -->
    <div class="card listing-card col-6 offset-3 show-card">
        <!-- Display listing image from 'listing.image.url' -->
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing image">

        <div class="card-body">
            <!-- Display listing title, description, price, location, and country -->
            <p class="card-text"> Owned by: <i><%= listing.owner.username %></i><br> </p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">â‚¹ <%= listing.price.toLocaleString('en-IN') %></p>
            <p class="card-text"><%= listing.location %></p>
            <p class="card-text"><%= listing.country %></p>
        </div>
    </div>

    <br>

    <!-- ===================== -->
    <!-- Edit and Delete Buttons -->
    <!-- ===================== -->
    <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="col-1 offset-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark btns">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="margin-top: 10px;">
                <button class="btn btn-dark btns">Delete</button>
            </form>
        </div>
    <% } %>

    <div class="col-8 offset-3">
        
        <% if(currUser) { %>
            <hr>
            <h4>Leave a Review</h4>
            <!-- Form to submit a new review -->
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3"></div>

                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" name="review[comment]" rows="4" cols="50" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>

                <div>
                    <button class="btn btn-outline-dark">Submit</button>
                </div>
            </form>
            <hr/>
        <% } %>

        
        <% if (listing.reviews.length > 0) { %>
            
        
        <!-- ===================== -->
        <!-- Reviews Section (Fixed Alignment) -->
        <!-- ===================== -->
        <div class="row">
            <p><b>Reviews</b></p>
            <% for(review of listing.reviews) { %>
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= review.author.username %></h5>
                            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p>
                        </div>
                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="p-2">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
        <% } %>
    </div>
    <div class="col-8 offset-3 mb-3">
        <hr>
        <!-- ===================== -->
        <!-- Map Section -->
        <!-- ===================== -->
        <h4>Where you'll be</h4>
        <div id="map"></div>

    </div>
    <script>
        let mapToken="<%=process.env.MAP_TOKEN%>";
        console.log(mapToken);
        // Initialize Mapbox with the access token
        mapboxgl.accessToken = mapToken;
      
        const map = new mapboxgl.Map({
            container: 'map', // ID of the container element
            style: 'mapbox://styles/mapbox/streets-v12', // Map style
            center: [-74.5,40], // Initial map center [lng, lat]
            zoom: 9 // Initial zoom level
        });
    </script>
</div>
